// 1. generates a Prisma client (prisma generate (arterfact))
generator client {
  provider = "prisma-client-js"
}

// 2. specify datasource/db = mysql
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement()) // @ = at = ATtribute
  email     String   @unique
  name      String
  followers Int      @default(0)
  isActive  Boolean? @default(true)
}

