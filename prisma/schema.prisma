// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique // if tried to create 2nd user with the same email id, 500 Internal Server Error
  name         String
  followers    Int      @default(0)
  isActive     Boolean  @default(true)
  registeredAt DateTime @default(now())
}

// changed from Product (conventional MySQL Server) -> Item (PlanetScale)
// to avoid conflict with products table already created using Web Console
model Item {
  id    Int    @id @default(autoincrement())
  name  String
  price Float
}
// price type changed to Int (dev branch of PlanetScale-planetdb) from Float (main branch of PlanetScale-planetdb)
